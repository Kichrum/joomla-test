        <filename>index.html</filename>
        <filename>hello.php</filename>
        <filename>controller.php</filename>
        <folder>views</folder>
        <folder>models</folder>
    </files>

    <administration>
        <!-- Создаем меню для аминистративной панели -->
        <menu>Hello!</menu>
        <!-- Копируем файлы для административной панели -->
        <files folder="admin">
            <filename>index.html</filename>
            <filename>hello.php</filename>
        </files>
    </administration>
